---
import ServiceWorkerRegister from "../../ui/components/ServiceWorkerRegister.astro";
import "../../ui/styles/global.css";
import ToolRunner from "../../ui/islands/ToolRunner";
import { tools } from "../../registry/tools/generated/tools.generated";

export function getStaticPaths() {
  return tools.map((tool) => ({
    params: { slug: tool.slug },
    props: { tool }
  }));
}

const { tool } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <title>{tool.title} | Tinykite Tools</title>
    <meta name="description" content={tool.seo.description} />
  </head>
  <body>
    <main class="page">
      <a href="/">Back</a>
      <h1>{tool.title}</h1>
      <p>{tool.seo.summary}</p>
      <ToolRunner client:visible tool={tool} />
    </main>
    <ServiceWorkerRegister />
  </body>
</html>
